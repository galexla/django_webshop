[flake8]
docstring-style=sphinx
max-line-length=79
max-doc-length=79
max-complexity=10
extend-exclude=
    .git
    .venv
exclude=
    */migrations/*
    *.pyc
    ./webshop/manage.py
    ./webshop/webshop/settings.py
    */tests/test_*.py
per-file-ignores =
    */apps.py: D101, D102
    products/signals.py: W503
ignore = RST201, RST203, RST301, D100, D104, D106, D205, D400
